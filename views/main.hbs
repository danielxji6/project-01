{{> header}}

    <div class="jumbotron">
      <div class="container">
        <h1 id="greet">Hi, {{user.username}}</h1>
        <a class="btn btn-default" href="/profile">Profile</a>
        <a class="btn btn-default" href="/logout">Logout</a>
      </div>
    </div>

    <div id="msg-list">
      <!-- handlebars template -->
      <script id="msg-template" type="text/x-handlebars-template">
        \{{#if msg}}
        \{{#each msg}}
        <div class="row msg" data-msg-id="\{{_id}}">
          <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
              <!-- no panel body -->
              <div class="row">
                <div class="container-fluid">
                  <button class="btn btn-clear pull-right delete-msg">X</button>
                  <span>to \{{toName}} (#\{{toNum}})</sapn><br>
                  <p><samll>Date: \{{date}}</samll></p>
                  <p><samll>Match: \{{match}}</samll></p>
                </div>
                <div class="col-md-6 col-md-offset-1">
                  <br><p class="msg-box">\{{msgText}}</p>
                  <button class="btn btn-default btn-sm edit">Edit Message</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        \{{/each}}
        \{{/if}}
        <div class="col-md-6 col-md-offset-3 row new-msg">
          <a href="/new" id="new-msg" class="btn btn-default btn-block">+ New Message</a>
          <br><a href="/meet" class="btn btn-default">Meet</a>
        </div>
      </script>
    </div>
    <!-- custom script -->
    <script type="text/javascript" src="js/main.js"></script>
  </body>
</html>
